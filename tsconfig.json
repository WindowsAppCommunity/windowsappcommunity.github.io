{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "outDir": "./build"
    },
    "include": [
        "src"
    ]
}